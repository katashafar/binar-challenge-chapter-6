<!DOCTYPE html>
<html lang="en">

<head>
    <title></title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <script src="https://cdn.tailwindcss.com"></script>
</head>

<body>
    <h1 class="">Table User Game</h1>
    <a href="/create">Add New</a>
    <br />
    <table class="table-auto">
        <thead>
            <tr>
                <th>Id</th>
                <th>Username</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            <% users.forEach(function(user) { %>
                <tr>
                    <td>
                        <%= user.id %>
                    </td>
                    <td>
                        <%= user.username %>
                    </td>
                    <td>
                        <a href="/delete/<%=user.id%>" onclick="return confirm('are you sure ?')" class="text-red-400">Delete</a>
                        <a href="/edit/<%=user.id%>" onclick="return confirm('are you sure ?')" class="text-blue-400">Edit</a>
                        <a href="/details/<%=user.id%>" onclass="text-green-400">Details</a>
                        <a href="/addbiodata/<%=user.id%>" class="text-red-400">Add</a>
                    </td>
                </tr>
                <% }); %>
        </tbody>
    </table>
</body>

</html>